<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.track_a_mole">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.TrackaMole"
        android:supportsRtl="true">

        <activity
            android:name=".GlobalFeed"
            android:label="@string/label_global" />
        <activity android:name=".FocusImage" />
        <activity
            android:name=".Registration"
            android:label="@string/label_registration" />
        <activity
            android:name=".StartScreen"
            android:label="@string/label_start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/label_profile" />
    </application>

</manifest>